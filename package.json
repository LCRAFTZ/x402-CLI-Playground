{
  "name": "x402-cli",
  "version": "0.1.0",
  "description": "Offline-first CLI for simulating the x402 payment protocol",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "bin": { "x402": "./dist/bin/x402.js" },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsc && node ./scripts/copy-bin.mjs",
    "start": "node ./bin/x402.js",
    "dev": "node --enable-source-maps ./dist/index.js",
    "test": "vitest run --coverage && npm run build && jest --coverage --passWithNoTests",
    "test:e2e": "vitest run tests/e2e.vitest.test.ts",
    "lint": "echo 'lint placeholder'"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ethers": "^6.12.1",
    "fastify": "^4.26.2",
    "fs-extra": "^11.2.0",
    "pino": "^9.4.0",
    "prompts": "^2.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^2.1.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
